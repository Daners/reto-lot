#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4#myModalLabel.modal-title {{dispositivo.Dispositivo}}
      .modal-body
        ul#myTabs.nav.nav-tabs(role='tablist')
          li.active(role='presentation')
            a#home-tab(href='#home', role='tab', data-toggle='tab', aria-controls='home', aria-expanded='true') Configuracion
          li(role='presentation')
            a#profile-tab(href='#profile', role='tab', data-toggle='tab', aria-controls='profile', aria-expanded='false') Alertas
        .container-fluid
          #myTabContent.tab-content
            #home.tab-pane.fade.active.in(style='    padding-top: 15px;', role='tabpanel', aria-labelledby='home-tab')
              form.form-horizontal
                .form-group
                  label.col-sm-2.control-label(for='mqtt') MQTT://
                  .col-sm-10
                    input#mqtt.form-control(type='url', placeholder='broker.mqtt.com')
                .form-group
                  label.col-sm-2.control-label(for='port') PORT
                  .col-sm-10
                    input#port.form-control(type='text', placeholder='8000')
                .form-group
                  label.col-sm-2.control-label(for='user') User
                  .col-sm-10
                    input#user.form-control(type='text', placeholder='username')
                .form-group
                  label.col-sm-2.control-label(for='pass') Password
                  .col-sm-10
                    input#pass.form-control(type='text', placeholder='*******')
                .form-group
                  label.col-sm-2.control-label(for='topic') Topic
                  .col-sm-10
                    input#topic.form-control(type='password', placeholder='all/#')
            #profile.tab-pane.fade(role='tabpanel', style='    padding-top: 15px;', aria-labelledby='profile-tab')
              form.form-horizontal
                .form-group
                  .col-sm-offset-2.col-sm-10
                    button.btn.btn-success(type='button') Activada
                .form-group
                  label.col-sm-2.control-label(for='val') Alerta Value
                  .col-sm-10
                    input#val.form-control(type='text', placeholder='498')
                .form-group
                  label.col-sm-2.control-label(for='correo') Correo
                  .col-sm-10
                    input#correo.form-control(type='email', placeholder='mail@nodemailer.com')
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button') Save changes
